-#  This file is app/views/movies/index.html.haml
%h1 All Moviesor

= form_tag movies_by_rating_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = check_box_tag "ratings[#{rating}]", rating, @selected_ratings.include?(rating), :id => "ratings_#{rating}"
    = label_tag 'ratings_' + rating, rating, :class => 'label_filter'
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{class: @class_title_hilite  }= link_to "Movie Title", movies_reordered_path(:sort => "title"), id: "title_header"
      %th Rating
      %th{class: @class_date_hilite  }= link_to "Release Date", movies_reordered_path(:sort => "date"), id: "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
