-#  This file is app/views/movies/index.html.haml
%h1 All Moviesor

%table#movies
  %thead
    %tr
      %th{:id => "title_header"}= link_to "Movie Title", movies_by_title_path
      %th Rating
      %th{:id => "release_date_header"}= link_to "Release Date", movies_by_date_path
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
